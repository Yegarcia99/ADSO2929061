doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title 17- Challenge
        link(rel="stylesheet", href="../../css/styles.css")
        style.
            body section.bgpug {
                background-color: black;
            }
            body section td {
                margin-bottom: 6px;
                
            }
            body section div {
                width: 60px;
                height: 80px;
                display: flex;
                align-items: center;
                justify-content: center;
            }
    body.pug
        nav
            a(href="../index.html")
                svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
                    path(fill="#ffffff" d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z")

        main
            header
                h1 17- Challenge
                h2 Provides an exercise to apply the learned concepts.
            section.bgpug
                table
                    - const divBackgrounds = ['#126464','#105064','#163c64','#1e2864','#281464','#330564','#3d0564','#460764','#500764','#5a0964']
                    each val, index in ['#08fafa','#17c8fa','#3296fa','#4b64fa','#6333fa','#7d01fa','#9601fa','#af01fa','#c801fa','#e101f9']
                        tr
                            td(style='width: 400px; height: 80px; color: black; display: flex; align-items: center; font-size: 2.0em; font-weight: bold; border-radius: 0 6px 6px 0 ; background-color: ' + val)
                                div(style='background-color: ' + divBackgrounds[index] + '')= index + 1
            
            
